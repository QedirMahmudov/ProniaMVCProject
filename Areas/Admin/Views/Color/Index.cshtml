@model List<Color>
@{
    int count = 0;
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Colors</h4>
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>
                                    No
                                </th>
                                <th>
                                    Name
                                </th>

                                <th>
                                    Date
                                </th>
                                <th>
                                    Settings
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Color color in Model)
                            {
                                count++;
                                <tr>
                                    <td>
                                        @count
                                    </td>
                                    <td>
                                        @color.Name
                                    </td>
                                    <td>
                                        @color.CreatedAt
                                    </td>
                                    <td>
                                        <a asp-action="update" asp-route-id="@color.Id" class="btn btn-warning"><i class="mdi mdi-pencil"></i></a>
                                        <a asp-action="delete" asp-route-id="@color.Id" class="btn btn-danger"><i class="mdi mdi-delete"></i></a>
                                        <a asp-action="detail" asp-route-id="@color.Id" class="btn btn-primary"><i class="mdi mdi-open-in-new"></i></a>
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>

                </div>
                <div class="d-flex justify-content-end mt-3">
                    <a asp-action="create" class="btn btn-success">Create</a>
                </div>
            </div>
        </div>
    </div>
</div>
